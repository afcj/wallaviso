host='root@wallaviso.com'
path='/root/web-wallaviso/'

[deploy:local]
git push origin master

[deploy]
git checkout master
git pull origin master
source ../venv/bin/activate
pip install -r requirements.txt
npm install
gulp build
systemctl restart nginx
systemctl restart wallaviso

[users_count]
mysql -u root --password=9578 -h localhost -e 'SELECT COUNT(*) FROM users;' wallaviso

[searchs]
mysql -u root --password=9578 -h localhost -e 'SELECT name FROM searchs;' wallaviso

[users]
mysql -u root --password=9578 -h localhost -e 'SELECT * FROM users;' wallaviso